<div class="row mb-3">
	<div class="col-sm-4 input-group">
		<input type="text" class="form-control" placeholder="Cari Pembeli.." data-bind="value: filterData.term, onReturnKey: search">
	</div>
	<div class="col-sm-8 text-right">
		<button class="btn btn-success" title="Data Baru" data-bind="click: insert">
			<i class="fa fa-plus"></i>
		</button>

		<a href="javascript: location.reload()" class="btn btn-secondary" title="Refresh halaman">
			<i class="fa fa-refresh"></i>
		</a>
	</div>
</div>
<div class="row mt-3">
	<div class="col-sm-4">
		<div class="form-check">
			<label class="form-check-label">
				<input class="form-check-input" type="checkbox" data-bind="checked: filterData.outstandingOnly"> Hanya Tampilkan yang belum lunas
			</label>
		</div>
	</div>
</div>
<table class="table table-hover table-responsive-md">
	<thead>
		<th>Tanggal</th>
		<th>Pembeli</th>
		<th>Telp.</th>
		<th>Pembayaran</th>
		<th class="text-right">Nilai</th>
	</thead>
	<tbody>
		<!-- ko foreach: results -->
		<tr data-bind="click: $root.onClickEvent()">
			<td data-bind="text: $data.transDate"></td>
			<td data-bind="text: $data.billTo"></td>
			<td data-bind="text: $data.phone"></td>
			<td data-bind="text: sjp.formatOwing($data.owing), css: {'text-danger': $data.outstanding}"></td>
			<td class="text-right" data-bind="text: sjp.formatRp($data.amount)"></td>
		</tr>
		<!-- /ko -->
		<tr>
			<td colspan="99" class="text-center" data-bind="visible: more">
				<button class="btn btn-link" data-bind="click: loadMore">load more</button>
			</td>
		</tr>
	</tbody>
</table>