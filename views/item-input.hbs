<div class="form-group row">
	<label class="col-sm-2 col-form-label">Nama</label>
	<div class="col-sm-10">
		<input class="form-control" data-bind="textInput: inputData.name">
	</div>
</div>

<div class="form-group row">
	<label class="col-sm-2 col-form-label">Departemen</label>
	<div class="col-sm-2">
		<select class="form-control" data-bind="value: inputData.dept">
			<option value="">-- pilih --</option>
			<option value="A">Dept A</option>
			<option value="B">Dept B</option>
		</select>
	</div>
</div>

<div class="form-group row">
	<label class="col-sm-2 col-form-label">Catatan</label>
	<div class="col-sm-10">
		<textarea class="form-control" data-bind="textInput: inputData.notes"></textarea>
	</div>
</div>

<div class="row">
	<div class="col-sm-10 offset-sm-2">
		<button class="btn btn-primary" data-bind="click: submit">Simpan</button>
	</div>
</div>